# ...existing rules...

# 민감 파일(.env 등) 직접 접근 차단
<FilesMatch "^(\.env|\.git|composer\.json|composer\.lock)$">
    Require all denied
</FilesMatch>

# API 요청을 php/api/로 리라이트
RewriteEngine On
RewriteRule ^api/(.*)$ php/api/$1 [L]

# 503 오류 페이지 설정
ErrorDocument 503 /error/503.php

# 필요한 PHP 파일 접근 허용
<Files "login_admin.php">
    Require all granted
</Files>

<Files "log_ajax_error.php">
    Require all granted
</Files>
